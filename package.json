  "description": "Bootswatch theme switcher Web Component",
  "type": "module",
  "main": "dist/BootSwatcher.mjs",
  "module": "dist/BootSwatcher.mjs",
  "browser": "dist/BootSwatcher.mjs",
  "exports": {
    ".": {
      "types": "./dist/types/BootSwatcher.d.ts",
      "import": "./dist/BootSwatcher.mjs",
      "default": "./dist/BootSwatcher.mjs"
    }
  },
  "files": [
    "dist/BootSwatcher.mjs",
    "dist/bootswatcher.iife.js",
    "dist/types/BootSwatcher.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "node build.js",
    "setup:webpack": "node setup-webpack.js",
    "lint": "eslint .",
    "format": "prettier --write .",
