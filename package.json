  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shoelace/bootswatcher.git"
  },
  "bugs": {
    "url": "https://github.com/Shoelace/bootswatcher/issues"
  },
  "homepage": "https://github.com/Shoelace/bootswatcher#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-wc": "^3.0.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bootstrap": "5.3.8",
    "bootswatch": "5.3.8"
  }
